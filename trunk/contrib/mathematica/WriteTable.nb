Cell["\<\
Routines that convert numbers to strings with a specific format for \
writing to plain text files.\
\>", "Text"],

Cell[CellGroupData[{

Cell["kPrecision = 10;", "Input",
  ImageRegion->{{0, 1}, {0, 1}}],

Cell[BoxData[
    \(General::"spell1" \(\(:\)\(\ \)\) 
      "Possible spelling error: new symbol name \"\!\(kPrecision\)\" is \
similar to existing symbol \"\!\(Precision\)\"."\)], "Message"]
}, Open  ]],

Cell["\<\
CPPString[man_,exp_] := \
StringJoin[ToString[PaddedForm[man,{kPrecision+3,kPrecision}]],\"e\",
\tToString[PaddedForm[exp,2,NumberSigns -> {\"-\",\"+\"},
\tSignPadding -> True,
\tNumberPadding -> {\"0\",\"0\"}]]]\
\>", "Input",
  ImageRegion->{{0, 1}, {0, 1}}],

Cell["CPPForm[num_Integer] := CPPForm[num + 0.]", "Input",
  ImageRegion->{{0, 1}, {0, 1}}],

Cell["\<\
CPPForm[0.] := Module[ 

\t{man, exp},

\texp = 0;
\tman = 0;
\t
\tCPPString[man,exp]
\t];\
\>", "Input",
  ImageRegion->{{0, 1}, {0, 1}}],

Cell["\<\
CPPForm[num_Real] := Module[ 

\t{man, exp},

\texp = Floor[Log[10,Abs[num]]];
\tman = num/(10^exp) //N;
\t
\tCPPString[man,exp]
\t];\
\>", "Input",
  ImageRegion->{{0, 1}, {0, 1}}],

Cell["\<\
ToDataLine[data_List] := StringJoin[Append[Map[StringJoin[#, \"  \
\"]& ,Map[CPPForm, data]],\"\\n\"]]\
\>", "Input",
  ImageRegion->{{0, 1}, {0, 1}}]
}, Closed]],

Cell[CellGroupData[{

Cell["functions:", "Subsubsection",
  ImageRegion->{{0, 1}, {0, 1}}],

Cell["Write the table to a file with the given name:", "Text"],

Cell["\<\
WriteTable[data_List,filename_String] := Module[

\t{fp},
\t
\tIf[Length[Dimensions[data]]==1,
\t\tWriteTable[{data},filename],
\t\tfp = OpenWrite[filename];
\t\tMap[WriteString[fp,ToDataLine[#]]&, data];
\t\tClose[fp]
\t\t]
\t];\
\>", "Input",
  ImageRegion->{{0, 1}, {0, 1}}],

Cell["\<\
Write list to a file wrapped at the given number of entries per \
line:\
\>", "Text"],

Cell[CellGroupData[{

Cell["\<\
WriteWrapped[data_List, file_String, wrap_Integer] := Module[

\t{fp, count, i, datflat},
\t
\tfp = OpenWrite[file];
\tdatflat = Flatten[data];
\tcount = 0;
\tDo[
\t\tWriteString[fp, ToString[ PaddedForm[datflat[[i]],8] ] ];
\t\tIf[++count == wrap, WriteString[fp, \"\\n\"]; count = 0],
\t
\t\t{i, Length[datflat]} ];
\t
\tClose[fp]
\t
\t]\
\>", "Input",
  ImageRegion->{{0, 1}, {0, 1}}],

Cell[BoxData[
    \(General::"spell1" \(\(:\)\(\ \)\) 
      "Possible spelling error: new symbol name \"\!\(count\)\" is similar to \
existing symbol \"\!\(Count\)\"."\)], "Message"]
}, Open  ]],

Cell[TextData[{
  "Like ",
  StyleBox["Partition", "Input"],
  " but it doesn't drop the remainder if the number of elements isn't a \
multiple of ",
  StyleBox["wrap", "Input"],
  "."
}], "Text"],

Cell[CellGroupData[{

Cell["\<\
Wrap[data_List, wrap_Integer] := Module[

\t{wrapped, remainder},
\t
\twrapped = Partition[data, wrap];
\tremainder = Mod[Length[data], wrap];
\tIf[ remainder != 0,
\t\twrapped = Append[wrapped, Take[data,-remainder]]
\t\t];
\twrapped
\t]\
\>", "Input",
  ImageRegion->{{0, 1}, {0, 1}}],

Cell[BoxData[
    \(General::"spell1" \(\(:\)\(\ \)\) 
      "Possible spelling error: new symbol name \"\!\(Wrap\)\" is similar to \
existing symbol \"\!\(wrap\)\"."\)], "Message"]
}, Open  ]]
}, Closed]],

