.SUFFIXES: .c .cpp .f .F

# GNU macros
COMP_C   = cc
COMP_CC  = g++
COMP_F   = g77
C_FLAGS  = -D__GNU__
CC_FLAGS = -D__GNU__
F_FLAGS  = -D__GNU__

LINK_C     = $(COMP_C) 
LINK_CC    = $(COMP_CC)
LINK_F     = $(COMP_F)
L_FLAGS_C  = -Xlinker -Y -Xlinker 50 -lg2c -lm
L_FLAGS_CC = -Xlinker -Y -Xlinker 50 -lg2c -lm
L_FLAGS_F  = -Xlinker -Y -Xlinker 50 -lm
