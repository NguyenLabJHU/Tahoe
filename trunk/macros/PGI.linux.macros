# $Id: PGI.linux.macros,v 1.9 2004-01-02 01:17:40 paklein Exp $
# linux with Portland Group compilers
MPI_CFLAGS = -D__TAHOE_MPI__
MPI_LFLAGS = -lmpich

MAKE        = make
DEFINES     = -D__GNU__ -D__PGI__ -DNON_UNIX_STDIO -D__TAHOE_MPI__
MAKEDEPEND  = makedepend
MAKEDEPEND_OUTPUT = -f
MAKEDEPENDFLAGS = -I/usr/local/caesar/pgi/linux86/include -I/usr/local/caesar/pgi/linux86/include/CC $(DEFINES)
COMP_C      = pgcc
COMP_CC     = pgCC
COMP_F      = pgf77
MORE_CFLAGS = -O2 -DNDEBUG
LOC_CFLAGS  = -c -I$(INC_DIR) $(DEFINES) $(MORE_CFLAGS)
CFLAGS_C    = $(MPI_CFLAGS) $(LOC_CFLAGS)
CFLAGS_CC   = $(MPI_CFLAGS) $(LOC_CFLAGS) -tlocal --display_error_number --diag_suppress 111
CFLAGS_F    = $(MPI_CFLAGS) $(LOC_CFLAGS)
LINK        = $(COMP_CC)
LFLAGS      = $(MPI_LFLAGS)
AR          = ar
ARFLAGS     = -cruv
RANLIB      = echo
RANLIBFLAGS =
MAKE_OPTS   = -s
RM          = rm
RM_FILES    = *.o *.ti *.*~ *.bak ii_* *.d all.depend *.h_link
LN          = ln -sf
ECHO        = /bin/echo -e
CAT         = cat
PERL        = perl -w
PRINTF      = printf
GREP        = grep
XARGS       = xargs

# target-specific extras
MAKE_INIT_XTRAS        =
MAKE_HEADERS_XTRAS     =
MAKE_DEPEND_INIT_XTRAS =
MAKE_CLEAN_XTRAS       =
MAKE_BUILD_XTRAS       =
