<?xml version="1.0" encoding="UTF-8"?>
<tahoe author="raregue" geometry_file="./g2d.1x1.geom"
    title="2D plane strain compression" xmlns:x0="http://www.w3.org/2001/XMLSchema">
    <time num_steps="100" output_inc="1" time_step="1e-2">
        <schedule_function>
            <piecewise_linear>
                <OrderedPair x="0.0" y="1.0"/>
            </piecewise_linear>
        </schedule_function>
        <schedule_function>
            <piecewise_linear>
                <OrderedPair x="0.0" y="0.0"/>
                <OrderedPair x="1.0" y="1.0"/>
            </piecewise_linear>
        </schedule_function>
    </time>
    <nodes>
        <field field_name="displacement">
            <dof_labels>
                <String value="D_X"/>
                <String value="D_Y"/>
            </dof_labels>
            <kinematic_BC dof="2" node_ID="1"/>
            <kinematic_BC dof="2" node_ID="2" schedule="2" type="u" value="-0.0045"/>
            <kinematic_BC dof="1" node_ID="4"/>
            <force_BC dof="1" node_ID="5" schedule="1" value="-800"/>
            <force_BC dof="1" node_ID="3" schedule="1" value="800"/>
        </field>
        <history_node_ID_list>
            <String value="2"/>
        </history_node_ID_list>
    </nodes>
    <element_list>
        <small_strain_enh_loc choose_element="1" choose_normal="2"
            cohesion_softening_coefficient="5e2"
            dilation_softening_coefficient="5e2"
            field_name="displacement"
            friction_softening_coefficient="5e2" model_type="1"
            peak_cohesion="0" peak_dilation_angle_rad=".087"
            peak_friction_angle_rad=".5236" residual_cohesion="0" residual_friction_angle_rad="0">
            <quadrilateral/>
            <solid_element_nodal_output displacements="1"
                material_output="1" stress="1"/>
            <solid_element_element_output material_output="1" stress="1"/>
            <small_strain_enh_loc_element_block>
                <block_ID_list>
                    <String value="1"/>
                </block_ID_list>
                <small_strain_material_2D>
                    <small_strain_StVenant_MR_2D density="1">
                        <E_and_nu Poisson_ratio=".3" Young_modulus="1.5e7"/>
                        <MR_SS_nonlinear_hardening Gf_I="1e5"
                            Gf_II="1e5" Tol_1="1e-6" Tol_2="1e-6"
                            alpha_c="100" alpha_chi="100" alpha_phi="10"
                            alpha_psi="10" c_p="1.3e4" c_r="0"
                            chi_p="2.25e4" chi_r="0" phi_p="30"
                            phi_r="5" psi_p="20"/>
                    </small_strain_StVenant_MR_2D>
                </small_strain_material_2D>
            </small_strain_enh_loc_element_block>
            <start_surface_coord>
                <Vector_2 v_1="0.04" v_2="0.072"/>
            </start_surface_coord>
        </small_strain_enh_loc>
    </element_list>
    <nonlinear_solver abs_tolerance="1.0e-12"
        divergence_tolerance="1.0e+03" max_iterations="100" rel_tolerance="1.0e-12">
        <full_matrix/>
    </nonlinear_solver>
</tahoe>
