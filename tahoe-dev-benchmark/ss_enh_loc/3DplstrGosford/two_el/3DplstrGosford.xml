<?xml version="1.0" encoding="UTF-8"?>
<tahoe author="raregue" geometry_file="./g3d.1x2.geom"
    output_format="Tahoe" title="3D plane strain compression" xmlns:x0="http://www.w3.org/2001/XMLSchema">
    <time max_step_cuts="5" num_steps="100" output_inc="1" time_step="0.01">
        <schedule_function>
            <piecewise_linear>
                <OrderedPair x="0.0" y="1.0"/>
            </piecewise_linear>
        </schedule_function>
        <schedule_function>
            <piecewise_linear>
                <OrderedPair x="0.0" y="0.0"/>
                <OrderedPair x="1.0" y="1.0"/>
            </piecewise_linear>
        </schedule_function>
    </time>
    <nodes>
        <field field_name="displacement">
            <dof_labels>
                <String value="D_X"/>
                <String value="D_Y"/>
                <String value="D_Z"/>
            </dof_labels>
            <kinematic_BC dof="2" node_ID="1"/>
            <kinematic_BC dof="2" node_ID="2" schedule="2" type="u" value="-0.0015"/>
            <kinematic_BC dof="1" node_ID="3"/>
            <kinematic_BC dof="3" node_ID="4"/>
            <force_BC dof="1" node_ID="5" schedule="1" value="-32"/>
            <force_BC dof="1" node_ID="6" schedule="1" value="32"/>
            <force_BC dof="1" node_ID="7" schedule="1" value="-16"/>
            <force_BC dof="1" node_ID="8" schedule="1" value="16"/>
        </field>
        <history_node_ID_list>
            <String value="2"/>
        </history_node_ID_list>
    </nodes>
    <element_list>
        <small_strain_enh_loc choose_element="0" choose_normal="0"
            cohesion_softening_coefficient="1e3"
            dilation_softening_coefficient="1e0"
            field_name="displacement"
            friction_softening_coefficient="1e0" model_type="0"
            peak_cohesion="0" peak_dilation_angle_rad="0.087"
            peak_friction_angle_rad="0.5236" residual_cohesion="0" residual_friction_angle_rad="0">
            <hexahedron/>
            <solid_element_nodal_output displacements="1" material_output="1"/>
            <solid_element_element_output material_output="1"/>
            <small_strain_enh_loc_element_block>
                <block_ID_list>
                    <String value="1"/>
                </block_ID_list>
                <small_strain_material_3D>
                    <small_strain_StVenant_DP_Loc density="1.0">
                        <E_and_nu Poisson_ratio=".3" Young_modulus="1.5e7"/>
                        <DP_Loc_SS_linear_hardening H="-1e6"
                            dilation=".35" fluidity_eta="0"
                            friction=".5" kappa="1.3e4"/>
                    </small_strain_StVenant_DP_Loc>
                </small_strain_material_3D>
            </small_strain_enh_loc_element_block>
        </small_strain_enh_loc>
    </element_list>
    <nonlinear_solver abs_tolerance="1.0e-12"
        divergence_tolerance="1.0e+03" max_iterations="20" rel_tolerance="1.0e-12">
        <full_matrix/>
    </nonlinear_solver>
</tahoe>
