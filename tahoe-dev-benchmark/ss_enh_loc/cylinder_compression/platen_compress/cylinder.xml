<?xml version="1.0" encoding="UTF-8"?>
<tahoe author="bao" echo_input="true" geometry_file="cylinder.g"
    geometry_format="ExodusII" output_format="ExodusII" title="cylinder" xmlns:x0="http://www.w3.org/2001/XMLSchema">
    <time num_steps="10" output_inc="1" time_step="0.1">
        <schedule_function>
            <piecewise_linear>
                <OrderedPair x="0" y="0"/>
                <OrderedPair x="1" y="1"/>
            </piecewise_linear>
        </schedule_function>
    </time>
    <nodes>
        <field field_name="displacement">
            <dof_labels>
                <String value="D_x"/>
                <String value="D_y"/>
                <String value="D_z"/>
            </dof_labels>
            <kinematic_BC dof="1" node_ID="50"/>
            <kinematic_BC dof="2" node_ID="40"/>
            <kinematic_BC dof="3" node_ID="80"/>
            <kinematic_BC dof="1" node_ID="80"/>
            <kinematic_BC dof="2" node_ID="80"/>
            <kinematic_BC dof="3" node_ID="60" schedule="1" type="u" value="2"/>
            <kinematic_BC dof="1" node_ID="60"/>
            <kinematic_BC dof="2" node_ID="60"/>
        </field>
    </nodes>
    <element_list>
        <small_strain field_name="displacement">
            <hexahedron/>
            <solid_element_nodal_output displacements="1" stress="1"/>
            <small_strain_element_block>
                <block_ID_list>
                    <String value="1"/>
                    <String value="2"/>
                    <String value="3"/>
                </block_ID_list>
                <small_strain_material_3D>
                    <small_strain_StVenant density="1.0">
                        <E_and_nu Poisson_ratio="0.35" Young_modulus="1e4"/>
                    </small_strain_StVenant>
                </small_strain_material_3D>
            </small_strain_element_block>
        </small_strain>
        <contact_3D_penalty field_name="displacement" penalty_stiffness="1e4">
            <contact_surface>
                <surface_side_set side_set_ID="5"/>
            </contact_surface>
            <contact_nodes>
                <node_ID_list>
                    <String value="30"/>
                </node_ID_list>
            </contact_nodes>
        </contact_3D_penalty>
        <contact_3D_penalty field_name="displacement" penalty_stiffness="1e4">
            <contact_surface>
                <surface_side_set side_set_ID="4"/>
            </contact_surface>
            <contact_nodes>
                <node_ID_list>
                    <String value="20"/>
                </node_ID_list>
            </contact_nodes>
        </contact_3D_penalty>
    </element_list>
    <nonlinear_solver abs_tolerance="1e-10" divergence_tolerance="1e2"
        max_iterations="10" rel_tolerance="1e-10">
        <profile_matrix/>
    </nonlinear_solver>
</tahoe>
