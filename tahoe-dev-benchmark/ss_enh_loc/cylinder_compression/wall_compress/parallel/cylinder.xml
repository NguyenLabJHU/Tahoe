<?xml version="1.0" encoding="UTF-8"?>
<tahoe author="bao" echo_input="true" geometry_file="../cylinder.g"
    geometry_format="ExodusII" output_format="ExodusII" title="cylinder" xmlns:x0="http://www.w3.org/2001/XMLSchema">
    <graph_decomposition/>
    <time max_step_cuts="3" num_steps="10" output_inc="1" time_step="0.1">
        <schedule_function>
            <piecewise_linear>
                <OrderedPair x="0" y="1"/>
                <OrderedPair x="1" y="1"/>
            </piecewise_linear>
        </schedule_function>
    </time>
    <nodes>
        <field field_name="displacement">
            <dof_labels>
                <String value="D_x"/>
                <String value="D_y"/>
                <String value="D_z"/>
            </dof_labels>
            <kinematic_BC dof="2" node_ID="40"/>
            <kinematic_BC dof="1" node_ID="50"/>
            <kinematic_BC dof="3" node_ID="30"/>
            <wall_penalty stiffness="1e5">
                <bc_initial_position>
                    <Vector_3 v_1="0.0" v_2="0.0" v_3="5.0"/>
                </bc_initial_position>
                <bc_velocity>
                    <Vector_3 v_1="0.0" v_2="0.0" v_3="0.0"/>
                </bc_velocity>
                <velocity_constant/>
                <node_ID_list>
                    <String value="30"/>
                </node_ID_list>
                <wall_normal>
                    <Vector_3 v_1="0.0" v_2="0.0" v_3="-1.0"/>
                </wall_normal>
            </wall_penalty>
            <wall_penalty stiffness="1e5">
                <bc_initial_position>
                    <Vector_3 v_1="0.0" v_2="0.0" v_3="-5.0"/>
                </bc_initial_position>
                <bc_velocity>
                    <Vector_3 v_1="0.0" v_2="0.0" v_3="2.0"/>
                </bc_velocity>
                <velocity_constant/>
                <node_ID_list>
                    <String value="20"/>
                </node_ID_list>
                <wall_normal>
                    <Vector_3 v_1="0.0" v_2="0.0" v_3="1.0"/>
                </wall_normal>
            </wall_penalty>
        </field>
    </nodes>
    <element_list>
        <small_strain field_name="displacement">
            <hexahedron/>
            <natural_bc coordinate_system="local" schedule="1" side_set_ID="1">
                <DoubleList>
                    <Double value="0"/>
                    <Double value="0"/>
                    <Double value="-10"/>
                </DoubleList>
                <DoubleList>
                    <Double value="0"/>
                    <Double value="0"/>
                    <Double value="-10"/>
                </DoubleList>
                <DoubleList>
                    <Double value="0"/>
                    <Double value="0"/>
                    <Double value="-10"/>
                </DoubleList>
                <DoubleList>
                    <Double value="0"/>
                    <Double value="0"/>
                    <Double value="-10"/>
                </DoubleList>
            </natural_bc>
            <solid_element_nodal_output displacements="1" stress="1"/>
            <small_strain_element_block>
                <block_ID_list>
                    <String value="1"/>
                </block_ID_list>
                <small_strain_material_3D>
                    <small_strain_StVenant density="1.0">
                        <E_and_nu Poisson_ratio="0.35" Young_modulus="1e4"/>
                    </small_strain_StVenant>
                </small_strain_material_3D>
            </small_strain_element_block>
        </small_strain>
    </element_list>
    <nonlinear_solver abs_tolerance="1e-10" divergence_tolerance="1e4"
        max_iterations="10" rel_tolerance="1e-10">
        <profile_matrix/>
    </nonlinear_solver>
</tahoe>
