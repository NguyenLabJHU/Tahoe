<?xml version="1.0" encoding="UTF-8"?>
<tahoe author="adrian_kopacz" echo_input="true"
    geometry_file="square_pipe_2.g" geometry_format="ExodusII"
    logging="verbose" output_format="ExodusII" title="ife_test" xmlns:x0="http://www.w3.org/2001/XMLSchema">
    <time num_steps="50" output_inc="5" time_step="0.1"/>
    <nodes>
        <field field_name="velocity" integrator="mixed">
            <dof_labels>
                <String value="D_X"/>
                <String value="D_Y"/>
                <String value="D_Z"/>
                <String value="P"/>
            </dof_labels>
            <initial_condition all_nodes="true" dof="1" type="u" value="1"/>
            <kinematic_BC dof="1" node_ID="4" type="u" value="1"/>
            <kinematic_BC dof="2" node_ID="4" type="fixed"/>
            <kinematic_BC dof="3" node_ID="4" type="fixed"/>
            <kinematic_BC dof="1" node_ID="1" type="u" value="0.0"/>
            <kinematic_BC dof="2" node_ID="1" type="fixed"/>
            <kinematic_BC dof="3" node_ID="1" type="fixed"/>
            <kinematic_BC dof="1" node_ID="2" type="u" value="0.0"/>
            <kinematic_BC dof="2" node_ID="2" type="fixed"/>
            <kinematic_BC dof="3" node_ID="2" type="fixed"/>
            <kinematic_BC dof="1" node_ID="3" type="u" value="0.0"/>
            <kinematic_BC dof="2" node_ID="3" type="fixed"/>
            <kinematic_BC dof="3" node_ID="3" type="fixed"/>
            <kinematic_BC dof="1" node_ID="5" type="u" value="0.0"/>
            <kinematic_BC dof="2" node_ID="5" type="fixed"/>
            <kinematic_BC dof="3" node_ID="5" type="fixed"/>
            <kinematic_BC dof="2" node_ID="6" type="fixed"/>
            <kinematic_BC dof="3" node_ID="6" type="fixed"/>
        </field>
    </nodes>
    <element_list>
        <incompressible_newtonian_fluid_element field_name="velocity">
            <hexahedron num_ip="8"/>
            <fluid_element_nodal_output coordinates="1" pressures="1" velocities="1"/>
            <fluid_element_stab_param>
                <tau_m_is_tau_c length_scale_type="spatial" stabilize_on_time_derivative_of_v="no"/>
            </fluid_element_stab_param>
            <fluid_element_block>
                <block_ID_list>
                    <String value="1"/>
                </block_ID_list>
                <fluid_material>
                    <linear_fluid_material density="1" viscosity="1"/>
                </fluid_material>
            </fluid_element_block>
        </incompressible_newtonian_fluid_element>
    </element_list>
    <nonlinear_solver abs_tolerance="1e-6" divergence_tolerance="10"
        max_iterations="10" rel_tolerance="1e-6">
        <SPOOLES_matrix/>
    </nonlinear_solver>
</tahoe>
