<?xml version="1.0" encoding="UTF-8"?>
<tahoe author="raregue" geometry_file="./square.1.geom"
    output_format="Tahoe"
    title="2D small strain gradient plasticity RKPM" xmlns:x0="http://www.w3.org/2001/XMLSchema">
    <time num_steps="10" output_inc="1" time_step="0.1">
        <schedule_function>
            <piecewise_linear>
                <OrderedPair x="0.0" y="0.0"/>
                <OrderedPair x="1.0" y="1.0"/>
            </piecewise_linear>
        </schedule_function>
    </time>
    <nodes>
        <field field_name="displacement">
            <dof_labels>
                <String value="D_X"/>
                <String value="D_Y"/>
            </dof_labels>
            <kinematic_BC dof="2" node_ID="1"/>
            <kinematic_BC dof="1" node_ID="5"/>
            <kinematic_BC dof="2" node_ID="3" schedule="1" type="u" value="-1.0"/>
            <kinematic_BC dof="1" node_ID="8"/>
        </field>
        <field field_name="lambda">
            <dof_labels>
                <String value="lam"/>
            </dof_labels>
        </field>
    </nodes>
    <element_list>
        <meshfree_grad_plast field_name="displacement"
            plast_mod_type="1" plastic_mult_field_name="lambda">
            <quadrilateral/>
            <mfgp_nodal_output displacements="1" material_output="1" stress="1"/>
            <mfgp_element_block>
                <block_ID_list>
                    <String value="1"/>
                </block_ID_list>
                <mfgp_small_strain_material_2D>
                    <small_strain_StVenant_MR_grad_2D density="1">
                        <E_and_nu Poisson_ratio=".25" Young_modulus="100"/>
                        <GRAD_MR_SS_nonlinear_hardening Gf_I="2"
                            Gf_II="1" Tol_1="1.0e-8" alpha_c="10"
                            alpha_chi="100" alpha_phi="10"
                            alpha_psi="10" c_p="4.5" c_r="0" chi_p="3"
                            chi_r=".1" lse_s="0" lse_v="0" lsp_s="0"
                            lsp_v="0" phi_p=".72" phi_r=".58" psi_p=".72"/>
                    </small_strain_StVenant_MR_grad_2D>
                </mfgp_small_strain_material_2D>
            </mfgp_element_block>
            <meshfree_support_2D>
                <RKPM completeness="1">
                    <gaussian_window cutoff_factor="2.0E0"
                        sharpening_factor="4.0E-1" support_scaling="1.5E0"/>
                </RKPM>
            </meshfree_support_2D>
            <meshfree_fracture_support>
                <interpolant_node_ID_list>
                    <String value="1"/>
                    <String value="3"/>
                </interpolant_node_ID_list>
            </meshfree_fracture_support>
        </meshfree_grad_plast>
    </element_list>
    <nonlinear_solver abs_tolerance="1.0e-12"
        divergence_tolerance="1.0e+01" max_iterations="30" rel_tolerance="1.0e-12">
        <profile_matrix/>
    </nonlinear_solver>
</tahoe>
