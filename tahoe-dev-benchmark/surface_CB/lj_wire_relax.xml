<?xml version="1.0" encoding="UTF-8"?>
<tahoe author="hspark" geometry_file="ljsquare.geom"
    output_format="Tahoe" title="LJ Nanowire 3rd Shell" xmlns:x0="http://www.w3.org/2001/XMLSchema">
    <time num_steps="2" output_inc="1" time_step="0.01"/>
    <nodes>
        <field field_name="displacement" integrator="static">
            <dof_labels>
                <String value="D_X"/>
                <String value="D_Y"/>
                <String value="D_Z"/>
            </dof_labels>
        </field>
    </nodes>
    <element_list>
        <particle_pair field_name="displacement"
            lattice_parameter="1.55661214" max_neighbor_distance="2.1" re-neighbor_displacement="2.0">
            <particle_type all_particles="true" label="LJ"/>
            <pair_particle_interaction label_1="LJ" label_2="LJ">
                <Lennard_Jones energy_scaling="1.0" length_scaling="1.0" mass="1.0"/>
            </pair_particle_interaction>
            <particle_pair_output displacement="1" potential_energy="1"/>
        </particle_pair>
    </element_list>
    <PCG_solver abs_tolerance="1.0e-10" divergence_tolerance="1.0e+06"
        line_search_iterations="10" line_search_tolerance="0.1"
        max_iterations="5000" max_step="2.5" quick_solve_iter="500"
        rel_tolerance="1.0e-12" restart="50">
        <diagonal_matrix/>
    </PCG_solver>
</tahoe>
