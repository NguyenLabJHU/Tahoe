<?xml version="1.0" encoding="UTF-8"?>
<tahoe compute_IC="true" echo_input="false"
    geometry_file="geometry/square_withbc.bigger.geom"
    geometry_format="TahoeII" output_format="Tahoe"
    restart_output_inc="0" title="3D FCC Cauchy-Born" xmlns:x0="http://www.w3.org/2001/XMLSchema">
    <time max_step_cuts="0" num_steps="2" output_inc="1" time_step="0.5">
        <schedule_function>
            <linear_function a="1.0" b="0.0"/>
        </schedule_function>
    </time>
    <nodes>
        <field field_name="displacement" integrator="static" solution_group="1">
            <dof_labels>
                <String value="D_X"/>
                <String value="D_Y"/>
                <String value="D_Z"/>
            </dof_labels>
            <kinematic_BC dof="1" node_ID="1" type="fixed"/>
            <kinematic_BC dof="2" node_ID="1" type="fixed"/>
            <kinematic_BC dof="3" node_ID="1" type="fixed"/>
            <kinematic_BC dof="2" node_ID="2" type="fixed"/>
            <kinematic_BC dof="3" node_ID="2" type="fixed"/>
            <kinematic_BC dof="3" node_ID="3" type="fixed"/>
        </field>
    </nodes>
    <element_list>
        <total_lagrangian_CBsurface field_name="displacement">
            <hexahedron/>
            <solid_element_nodal_output displacements="1"/>
            <large_strain_element_block>
                <block_ID_list>
                    <String value="1"/>
                </block_ID_list>
                <large_strain_material_3D>
                    <FCC_3D density="1.0" shells="3">
                        <CB_lattice_FCC>
                            <FCC_natural/>
                        </CB_lattice_FCC>
                        <Lennard_Jones energy_scaling="1.0"
                            length_scaling="1.0" mass="1.0"/>
                    </FCC_3D>
                </large_strain_material_3D>
            </large_strain_element_block>
        </total_lagrangian_CBsurface>
    </element_list>
    <nonlinear_solver abs_tolerance="1.0e-08"
        check_LHS_perturbation="1.0E-8" check_code="no_check"
        divergence_tolerance="1.0e+10" max_iterations="25" rel_tolerance="1.0e-10">
        <profile_matrix/>
    </nonlinear_solver>
</tahoe>
