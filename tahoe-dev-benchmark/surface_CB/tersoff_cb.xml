<?xml version="1.0" encoding="UTF-8"?>
<tahoe author="paklein" geometry_file="../geometry/cube.1.geom"
    title="3D uniaxial extension" xmlns:x0="http://www.w3.org/2001/XMLSchema">
    <time num_steps="2" output_inc="1" time_step="0.5">
        <schedule_function>
            <piecewise_linear>
                <OrderedPair x="0.0" y="0.0"/>
                <OrderedPair x="1.0" y="0.1"/>
            </piecewise_linear>
        </schedule_function>
    </time>
    <nodes>
        <field field_name="displacement">
            <dof_labels>
                <String value="D_X"/>
                <String value="D_Y"/>
                <String value="D_Z"/>
            </dof_labels>
            <kinematic_BC dof="3" node_ID="1"/>
            <kinematic_BC dof="3" node_ID="2" schedule="1" type="u" value="0.1"/>
            <kinematic_BC dof="2" node_ID="3"/>
            <kinematic_BC dof="1" node_ID="4"/>
        </field>
    </nodes>
    <element_list>
        <updated_lagrangian field_name="displacement">
            <hexahedron/>
            <solid_element_nodal_output displacements="1"
                material_output="1" stress="1" wave_speeds="1">
                <wave_direction>
                    <Vector_3 v_1="1.0" v_2="0.0" v_3="0.0"/>
                </wave_direction>
            </solid_element_nodal_output>
            <large_strain_element_block>
                <block_ID_list>
                    <String value="1"/>
                </block_ID_list>
                <large_strain_material_3D>
                    <Tersoff_CB density="1">
                        <Tersoff_CB_solver a0="5.431"
                            attr_energy_exponent_muij="1.7322"
                            attr_energy_scale_Bij="471.18"
                            bond_order_coeff1_betai="1.1e-6"
                            bond_order_coeff2_ci="100390"
                            bond_order_coeff3_di="16.217"
                            bond_order_coeff4_hi="-0.59825"
                            bond_order_exponent_ni="0.78734"
                            bond_order_scaling_chi_ij="1"
                            cutoff_func_length_1_Rij="2.7"
                            cutoff_func_length_2_Sij="3" mass="1"
                            rep_energy_exponent_lambdaij="2.4799" rep_energy_scale_Aij="1830.8"/>
                    </Tersoff_CB>
                </large_strain_material_3D>
            </large_strain_element_block>
        </updated_lagrangian>
    </element_list>
    <nonlinear_solver abs_tolerance="1.0e-10"
        divergence_tolerance="1.0e+01" max_iterations="10" rel_tolerance="1.0e-12">
        <profile_matrix/>
    </nonlinear_solver>
</tahoe>
