<?xml version="1.0" encoding="UTF-8"?>
<tahoe author="hspark" geometry_file="geometry/wire.small.exo"
    output_format="ExodusII" restart_output_inc="1"
    title="EAM Surface CB" xmlns:x0="http://www.w3.org/2001/XMLSchema">
    <time num_steps="1" output_inc="1" time_step="0.1">
        <schedule_function>
            <linear_function a="0.0" b="0.0"/>
        </schedule_function>
    </time>
    <nodes>
        <field field_name="displacement">
            <dof_labels>
                <String value="D_X"/>
                <String value="D_Y"/>
                <String value="D_Z"/>
            </dof_labels>
            <kinematic_BC dof="1" node_ID="1"/>
            <kinematic_BC dof="2" node_ID="1"/>
            <kinematic_BC dof="3" node_ID="1"/>
            <kinematic_BC dof="2" node_ID="2"/>
            <kinematic_BC dof="3" node_ID="2"/>
        </field>
        <history_node_ID_list>
            <String value="1"/>
        </history_node_ID_list>
    </nodes>
    <element_list>
        <total_lagrangian field_name="displacement">
            <hexahedron/>
            <solid_element_nodal_output displacements="1" stress="1"/>
            <large_strain_element_block>
                <block_ID_list>
                    <String value="1"/>
                </block_ID_list>
                <large_strain_material_3D>
                    <large_strain_StVenant density="0.001">
                        <E_and_nu Poisson_ratio="0.25" Young_modulus="100.0"/>
                    </large_strain_StVenant>
                </large_strain_material_3D>
            </large_strain_element_block>
        </total_lagrangian>
    </element_list>
    <nonlinear_solver abs_tolerance="1.0e-08"
        check_LHS_perturbation="1.0E-8" check_code="no_check"
        divergence_tolerance="1.0e+1" max_iterations="5000" rel_tolerance="1.0e-10">
        <profile_matrix/>
        <LOBPCG_solver block_size="2" max_eigenmodes="2"
            max_iter="50000" output_matricies="false" tolerance="1.0E-6"
            use_relative_tolerance="false" verbosity="IterationDetails"/>
    </nonlinear_solver>
</tahoe>
