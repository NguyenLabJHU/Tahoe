<?xml version="1.0" encoding="UTF-8"?>
<tahoe author="skyu" geometry_file="diamond_3D_simple.geom"
    output_format="ExodusII" title="diamond_3D_simple tension case" xmlns:x0="http://www.w3.org/2001/XMLSchema">
    <time num_steps="1000" output_inc="1" time_step=".001">
        <schedule_function>
            <piecewise_linear>
                <OrderedPair x="0" y="0"/>
                <OrderedPair x="1" y="1"/>
            </piecewise_linear>
        </schedule_function>
        <schedule_function>
            <piecewise_linear>
                <OrderedPair x="0" y="1"/>
                <OrderedPair x="1" y="1"/>
            </piecewise_linear>
        </schedule_function>
    </time>
    <nodes>
        <field field_name="displacement">
            <dof_labels>
                <String value="D_X"/>
                <String value="D_Y"/>
                <String value="D_Z"/>
            </dof_labels>
            <kinematic_BC dof="1" node_ID="3"/>
            <kinematic_BC dof="2" node_ID="4"/>
            <kinematic_BC dof="3" node_ID="1"/>
            <kinematic_BC dof="3" node_ID="2" schedule="1" type="u" value="0.5"/>
        </field>
        <history_node_ID_list>
            <String value="1"/>
            <String value="2"/>
        </history_node_ID_list>
    </nodes>
    <element_list>
        <small_strain field_name="displacement">
            <tetrahedron/>
            <solid_element_nodal_output displacements="1"
                material_output="1" stress="1"/>
            <small_strain_element_block>
                <block_ID_list>
                    <String value="1"/>
                </block_ID_list>
                <small_strain_material_3D>
                    <small_strain_StVenant density="1">
                        <E_and_nu Poisson_ratio="0.3" Young_modulus="1e5"/>
                    </small_strain_StVenant>
                </small_strain_material_3D>
            </small_strain_element_block>
        </small_strain>
        <anisotropic_CSE field_name="displacement">
            <triangle/>
            <surface_element_nodal_output displacement_jump="1"
                displacements="1" material_output="1" traction="1"/>
            <anisotropic_CSE_element_block>
                <block_ID_list>
                    <String value="2"/>
                </block_ID_list>
                <cohesive_relation_3D>
                    <elastoplastic_MR_3D E_n="1e3" E_t1="1e3" E_t2="1e3"
                        Gf_I="2" Gf_II="2" Tol_1="1e-8" Tol_2="1e-8"
                        alpha_c="10" alpha_chi="100" alpha_phi="10"
                        alpha_psi="10" c_p="4.5" c_r="0.0" chi_p="3.0"
                        chi_r="0.0" phi_p="0.7" phi_r="0.0" psi_p="0.5"/>
                </cohesive_relation_3D>
            </anisotropic_CSE_element_block>
        </anisotropic_CSE>
    </element_list>
    <nonlinear_solver abs_tolerance="1.0e-10"
        divergence_tolerance="1.0e+10" max_iterations="100" rel_tolerance="1.0e-10">
        <profile_matrix/>
    </nonlinear_solver>
</tahoe>
