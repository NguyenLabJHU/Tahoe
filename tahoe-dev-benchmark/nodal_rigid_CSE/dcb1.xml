<?xml version="1.0" encoding="UTF-8"?>
<tahoe echo_input="false" geometry_file="./geometry/dcb1_db.exo"
    restart_output_inc="500" xmlns:x0="http://www.w3.org/2001/XMLSchema">
    <time max_step_cuts="20" num_steps="100" output_inc="-1" time_step="0.1">
        <schedule_function>
            <piecewise_linear>
                <OrderedPair x="0.0" y="0.0"/>
                <OrderedPair x="10.0" y="10.0"/>
            </piecewise_linear>
        </schedule_function>
    </time>
    <nodes>
        <field field_name="displacement">
            <dof_labels>
                <String value="D_X"/>
                <String value="D_Y"/>
            </dof_labels>
            <kinematic_BC dof="2" node_ID="1" schedule="1" type="u" value="0.1"/>
            <kinematic_BC dof="2" node_ID="2" schedule="1" type="u" value="-0.1"/>
            <kinematic_BC dof="1" node_ID="3" type="fixed"/>
            <kinematic_BC dof="2" node_ID="3" type="fixed"/>
        </field>
    </nodes>
    <element_list>
       <CSE_rigid_aniso_nodal_int field_name="displacement" rotate_frame="false">
            <line/>
            <rigid_aniso_CSE_element_block>
                <block_ID_list>
                    <String value="4"/>
                </block_ID_list>
                <rigid_cohesive_relation_2D>
                    <Tvergaard-Hutchinson_2D L_1="1e-10" L_2="1e-10"
                        L_fail="1000" d_c_n="0.1" d_c_t="0.1"
                        penalty="1000" sigma_max="3.3"/>
                </rigid_cohesive_relation_2D>
            </rigid_aniso_CSE_element_block>
        </CSE_rigid_aniso_nodal_int>
        <updated_lagrangian_adaptive_insertion
            cohesive_element_group="1" field_name="displacement"
            release_threshold="3.3" release_tol=".01">
            <quadrilateral/>
            <solid_element_nodal_output coordinates="1"
                displacements="1" principal_stress="1" stress="1"/>
            <large_strain_element_block>
                <block_ID_list>
                    <String value="1"/>
                    <String value="2"/>
                    <String value="3"/>
                </block_ID_list>
                <large_strain_material_2D>
                    <large_strain_StVenant_2D
                        constraint_2D="plane_strain" density="1.0">
                        <E_and_nu Poisson_ratio="0.33" Young_modulus="100.00"/>
                    </large_strain_StVenant_2D>
                </large_strain_material_2D>
            </large_strain_element_block>
        </updated_lagrangian_adaptive_insertion>
    </element_list>
    <nonlinear_solver abs_tolerance="1.0e-8"
        divergence_tolerance="1.0e+01" max_iterations="20"
        output_inc="0" rel_tolerance="1.0e-8">
        <profile_matrix/>
    </nonlinear_solver>
</tahoe>
