<?xml version="1.0" encoding="UTF-8"?>
<tahoe author="rdorgan" echo_input="false"
    geometry_file="../../geometry/bar.002el.geom" output_format="Tahoe"
    title="1D bar under tension" xmlns:x0="http://www.w3.org/2001/XMLSchema">
    <time num_steps="3" output_inc="1" time_step="0.3333333333">
        <schedule_function>
            <piecewise_linear>
                <OrderedPair x="0.0" y="0.0"/>
                <OrderedPair x="1.0" y="1.0"/>
            </piecewise_linear>
        </schedule_function>
    </time>
    <nodes>
        <field field_name="displacement">
            <dof_labels>
                <String value="D_X"/>
            </dof_labels>
            <kinematic_BC dof="1" node_ID="1"/>
            <kinematic_BC dof="1" node_ID="2" schedule="1" type="u" value="0.075"/>
        </field>
        <field field_name="lambda">
            <dof_labels>
                <String value="L"/>
                <String value="L_X"/>
            </dof_labels>
            <kinematic_BC dof="2" node_ID="1"/>
            <kinematic_BC dof="2" node_ID="2"/>
        </field>
    </nodes>
    <element_list>
        <grad_small_strain field_name="displacement"
            grad_plasticity_field_name="lambda">
            <line num_ip="2"/>
            <solid_element_nodal_output material_output="1" stress="1"/>
            <grad_small_strain_element_block>
                <block_ID_list>
                    <String value="1"/>
                </block_ID_list>
                <grad_small_strain_material_1D>
                    <grad_small_strain_StVenant_J2_1D density="1">
                        <E_and_nu Poisson_ratio="0.3" Young_modulus="2.0e+05"/>
                        <linear_function a="2.0e+04" b="100.0e+00"/>
                    </grad_small_strain_StVenant_J2_1D>
                </grad_small_strain_material_1D>
            </grad_small_strain_element_block>
        </grad_small_strain>
    </element_list>
    <nonlinear_solver abs_tolerance="1e-10" divergence_tolerance="1e+02"
        max_iterations="50" rel_tolerance="1e-12">
        <profile_matrix/>
    </nonlinear_solver>
</tahoe>
