# MPI
MPI_CFLAGS = -D__MPI__
MPI_LFLAGS = -lmpi

# DEC
COMP_CC     = cxx
COMP_C      = cxx
AR          = ar
LINK        = $(COMP_CC)
TR          = $(OBJ_DIR)/cxx_repository
MY_CFLAGS   = -c -ptr $(TR) -distinguish_nested_enums -msg_disable 161,111 -I$(INC_DIR)
DEFINES     = -D__DEC__
CFLAGS      = $(MPI_CFLAGS) $(MY_CFLAGS) $(DEFINES)
MORE_CFLAGS = -O3 -DNDEBUG 
#MORE_CFLAGS = -g 
LFLAGS      = $(MPI_LFLAGS) -lm -ptr $(TR)
ARFLAGS     = -cruv
MAKE_OPTS   =
RM          = rm
LN          = ln -sf
INC_FLAGS   = -I/usr/include/cxx
