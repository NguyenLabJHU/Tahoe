# $Id: GNU.troi.purify.macros,v 1.2 2003-12-28 10:04:33 paklein Exp $
# GNU
MAKE        = make
MAKE_DEPEND = makedepend
DEPENDFLAGS = -I/usr/local/include/g++-3 -I/usr/include/g++-2 -I/usr/include -I/usr/local/sparc-sun-solaris2.7/include
COMP_C      = gcc
COMP_CC     = g++
COMP_F      = g77
DEFINES     = -D__GNU__ -D__SUN__ -D__NO_RTTI__
#MORE_CFLAGS = -O3 -DNDEBUG
MORE_CFLAGS = -g
#LOC_CFLAGS  = -c -I$(INC_DIR) $(DEFINES) $(MORE_CFLAGS) -Wunused -Wuninitialized
LOC_CFLAGS  = -c -I$(INC_DIR) $(DEFINES) $(MORE_CFLAGS)
CFLAGS_C    = $(LOC_CFLAGS)
CFLAGS_CC   = $(LOC_CFLAGS)
CFLAGS_F    = $(LOC_CFLAGS)
PURIFY      = /scr2/local/Rational/releases/purify.sol.2001a.04.00/purify 
PURECOV     = /scr2/local/Rational/releases/purecov.sol.2001a.04.00/purecov
LINK        = $(PURIFY) -log-file=%v.purify.log -view-file=%v.pv $(COMP_CC)
LFLAGS      = -static
AR          = ar
ARFLAGS     = -cruv
MAKE_OPTS   = -s
RM          = rm
RM_FILES    = *.o *.i *.*~ *.bak ii_* *.d all.depend
LN          = /home/paklein/bin/ln -sf
ECHO        = echo
CAT         = cat
PERL        = perl
PRINTF      = printf

# command needed build library
#BUILD_LIBRARY = BUILD_LIBRARY_RANLIB
BUILD_LIBRARY = BUILD_LIBRARY_AR
