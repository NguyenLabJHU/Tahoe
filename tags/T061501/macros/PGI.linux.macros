# $Id: PGI.linux.macros,v 1.1 2001-03-01 01:15:04 hspark Exp $
# linux with Portland Group compilers
MPI_CFLAGS = -D__MPI__
MPI_LFLAGS = -lmpich

MAKE        = make
MAKE_DEPEND = makedepend
COMP_C      = pgcc
COMP_CC     = pgCC
COMP_F      = pgf77
DEFINES     = -D__GNU__ -D__PGI__ -DNON_UNIX_STDIO
MORE_CFLAGS = -O2 -DNDEBUG
#MORE_CFLAGS = -g
MY_CFLAGS   = -c -I$(INC_DIR) $(DEFINES) $(MORE_CFLAGS)
CFLAGS_C    = $(MPI_CFLAGS) $(MY_CFLAGS)
CFLAGS_CC   = $(MPI_CFLAGS) $(MY_CFLAGS) -tlocal --display_error_number --diag_suppress 111
CFLAGS_F    = $(MPI_CFLAGS) $(MY_CFLAGS)
LINK        = $(COMP_CC)
LFLAGS      = $(MPI_LFLAGS)
AR          = ar
ARFLAGS     = -cruv
MAKE_OPTS   = -s
RM          = rm
RM_FILES    = *.o *.ti *.*~ *.bak ii_* *.d all.depend
LN          = ln -sf
ECHO        = /bin/echo -e
CAT         = cat
INC_FLAGS   = -I/usr/local/caesar/pgi/linux86/include -I/usr/local/caesar/pgi/linux86/include/CC
